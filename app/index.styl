@require 'normalize.css/normalize.css';

//reset

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
  margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}


//// fim reset



*{
  box-sizing: border-box;
  outline: none;
}

html,
body {
  height: 100%;
  width: 100%;

}

[alt=""] {

  border: 2px solid red;

}

.main {
  display: flex;
  background-image: url('http://cdn.backgroundhost.com/backgrounds/subtlepatterns/retina_wood.png');
  justify-content: center;
  align-items: center;
  height: 100vh;


  .simon {
    display: flex;
    flex-wrap: wrap;
    //background-color: grey;
    height: 500px;
    width: 500px;
    border: 10px solid rgb(69, 60, 45);
    border-radius: 50%;
    overflow: hidden;
    

    &-menu{
      position: absolute;
      background-color: #e0e0e0;
      width: 250px;
      height: 250px;
      border-radius: 50%;  
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border: 10px solid rgb(69, 60, 45);
      z-index: 10;
      padding: 20px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      overflow: hidden;
      align-items: center;
    
    
      &__title{
        align-self: flex-end;
        text-align: center;
        font-size: 37px;
        font-family: 'Alfa Slab One', cursive;
        position: relative;
        

        span{
          font-size: 20px;
          position: absolute;
          top: 5px;
        }
      }

    
      &__button-wrapper {
        width: 100%;
        height: 50%;
        display: flex;
        flex-direction: column;
        align-content: center;
        align-self: flex-end;
        
      
        &-row-1 {
          display: flex;
          align-items: center;
          justify-content: space-around;
        }


        &-individual{
          display: flex;
          flex-direction: column;
          justify-content: center;
          font-family: 'Oswald',Arial,sans;

          
        }

        &__count-view{
          width: 60px;
          height: 35px;
          background-color: black;
          display: flex;
          justify-content: center;
          align-items: center;
          border-radius: 10px;
        }
        &__count-level{
          font-family: 'VT323', monospace;
          color: red;
          font-size: 30px;
        }     
      } 
    
    }

    


    &-btn-rounded {
      width: 35px;
      height: 35px;
      border-radius: 50%;
      border: 2px grey solid;
      
    }

    &-btn-on-off{
      margin: 10px auto;
      width: 60px;
      height: 25px;   
      border: 1px solid black;
      background-color: darken(grey, 40);
      display: flex;



      &-span{
        background-color: blue;
        width: 50%;
        height: 100%;
        margin-left: 0%;
        transition: all .2s;

        &--active{
          margin-left: 50%;
        }  
      }

    }
  
    
    &-btn-start{
      background-color: red;
      
      &__text{
        
      }
    }

    &-btn-strict {
      background-color: yellow;
      position: relative;  

      &-light{
        position: absolute;
        background-color: red;
        border: 1px solid black;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        margin-top: -30px;
        margin-left: -5px;
        filter: brightness(0.25);

        &--active {
          filter: brightness(1);
        }
      }
    }

    &-color{
      //background-color: orangered;
      flex-basis: 50%;
      z-index: 1;
      filter: brightness(0.5);
      box-sizing: content-box;
      cursor: pointer;
      //border: 10px solid rgb(69, 60, 45);
      
      &--1 {
        background-color: green;
      }

      &--2 {
        background-color: rgb(255,0,0);
      }

      &--3 {
        background-color: yellow;
      }

      &--4 {
        background-color: blue;
      }

      &-active{
        filter: brightness(2);
      }
    }  
  }

}